{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": false,
    "quotemark": [
      true,
      "double"
    ],
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "no-namespace": false,
    "whitespace": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-snake-case",
      "allow-pascal-case"
    ]
  }
}